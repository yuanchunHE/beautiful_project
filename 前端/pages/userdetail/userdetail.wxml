<!--pages/userdetail/userdetail.wxml-->
<view class="userinfo">
  <image class="userinfo-avatar" src="/images/headpor.jpg" background-size="cover"></image>
</view>

<view class='item'>
  <view class="title">
    用户名：
    <input placeholder="请输入用户名" type="text" name="username"></input>
  </view>
</view>
<view class="line"></view>

<view class='item'>
  <view class="title">
    电话号码：
    <input placeholder="请输入电话号码" type="text" name="phonum"></input>
  </view>
</view>
<view class="line"></view>

<view class='item'>
  <view class="title">
    邮箱：
    <input placeholder="请输入邮箱" type="text" name="mail"></input>
  </view>
</view>
<view class="line"></view>