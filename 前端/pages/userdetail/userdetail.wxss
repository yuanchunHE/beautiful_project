.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: plum;
  width: 100%;
  height: 300rpx;
}
.userinfo-avatar {
  width: 256rpx;
  height: 256rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.item {
  display: flex;
  flex-direction: row;
}
.line {
  border: 1px solid #ccc;
  opacity: 0.2;
}