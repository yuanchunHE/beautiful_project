/* pages/order/order.wxss */
page{
  height: 100%;
}
.img{
  width: 100%;
  height: 26%;
}
image{
  width: 100%;
  height: 100%;
}
/* 第二部分 */
.busInfo{
  padding: 0 40rpx;
  margin-top: 30rpx;
  font-weight: bold;
  font-size: 36rpx;
}
.mt20{
  margin-top: 20rpx;
}
.text{
  color: plum;
}

/* 第三部分 */
.dataAndTime{
  margin-top: 40rpx;
  padding: 0 40rpx;
  display: flex;
  justify-content: space-between;
}
.iconImage{
  width:50rpx;
  height: 50rpx;
}

.section{
  display: flex;
  align-items:center;
}
.section picker{
  border: 1px solid #999;
  margin-left: 10rpx;
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
  width: 250rpx;
}

/* 第四部分 */
.orderForm{
  padding: 0 40rpx;
  margin-top: 40rpx;
}
.orderForm input{
  border: 1px solid #999;
  padding: 5rpx 10rpx;
  margin-top: 10rpx;
  border-radius: 10rpx;
}

.orderFont{
  font-size: 36rpx;
  font-weight: bold;
}
.formItem{
  margin-top: 15rpx;
}

.orderBtn{
  color: #fff;
  background-color: purple;
  margin: 40rpx 0;
}