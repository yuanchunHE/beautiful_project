/* pages/userwallet/userwallet.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: plum;
  width: 100%;
  height: 300rpx;
}

.walletinfo {
  display: flex;
  flex-direction: column;
  align-items:flex-start;
  background: rgb(222, 229, 233);
  width: 100%;
  height: 830rpx;
}

.userinfo-avatar {
  width: 256rpx;
  height: 256rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.line {
  border: 1px solid rgb(15, 12, 12);
  opacity: 0.5;
  width: 100%;
}

.recharge {
  margin-top: 200rpx;
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
}

.rechargeicon {
  display:contents;
}


