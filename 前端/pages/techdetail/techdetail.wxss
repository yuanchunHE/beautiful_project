/* pages/techdetail/techdetail.wxss */
page{
  height: 100%;
}
/* 技师图片展示 */
.img{
  width: 100%;
  height: 26%;
  border: 1px solid red;
}
image{
  width: 100%;
  height: 100%;
}

/* 技师名字+介绍 */
.techInfo{
  margin-top: 10rpx;
  /* padding: 0 20px; */
  border-bottom:2px solid black;
  width: 80%;
  margin-right: 10%;
}
.techName{
  font-weight: bolder;
  font-size: 40rpx;
}
.techDesc{
  font-size: 32rpx;
  color: gray;
  padding: 10px 0;
}

/* 底部 技师会的项目信息展示 */
.content-bottom{
  margin-top: 20rpx;
  width: 100%;
}

.content-bottom .sub-list{
  width: 100%;
}

.list-item{
  width: 100%;
  height: 200rpx;
  /* border: 1px solid red; */
  border-bottom: 1px solid gainsboro;
  display: flex;
  justify-content: space-around;
}

.list-item .img{
  margin-top: 10rpx;
  height: 80%;
  width: 30%;
  /* border: 1px solid black; */
}

.list-item image{
  height: 100%;
  width: 100%;
}

.list-item .text{
  margin-top: 10rpx;
  height: 80%;
  width: 55%;
  /* border: 1px solid blue; */
  position: relative;
}

.text .sub-name{
  font-size: 28rpx;
  font-weight: bolder;
}

.text .sub-price{
  margin-top: 30rpx;
  font-size: 33rpx;
  font-weight: bolder;
  color: plum;
}

.text .sub-desc{
  font-size: 28rpx;
  font-weight: bolder;
  color: gainsboro;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.text .btn{
  width: 100rpx;
  height: 100rpx;
  background-color: purple;
  border-radius: 50%;
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: bolder;
  color: gainsboro;
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}